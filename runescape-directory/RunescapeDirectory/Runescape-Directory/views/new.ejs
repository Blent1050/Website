<% include ./partials/header %>

<div class='ui main text container segment'>
    <div class='ui huge header'>New Item</div>
    <form class='ui form' action='/items' method='POST'>
        <div class='field'>
            <label>Title</label>
            <input type='text' name='item[itemName]' placeholder='Item Name' required>
        </div>
        <div class='field'>
            <label>Image</label>
            <input type='text' name='item[itemImage]' placeholder='image' required>
        </div>
        <div class='field'>
            <label>Description of Item</label>
            <textarea name='item[itemDescription]' required></textarea>
        </div>
        <input class='ui violet big inverted button' type='submit'>
    </form>
</div>

<% include ./partials/footer %>