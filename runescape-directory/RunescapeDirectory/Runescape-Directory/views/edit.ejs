<% include ./partials/header %>

<div class='ui main text container segment'>
    <div class='ui huge header'>Update <%=item.itemName%></div>
    <form class='ui form' action='/items/<%= item._id %>?_method=PUT' method='POST'>
        <div class='field'>
            <label>Item Name</label>
            <input type='text' name='item[itemName]' value='<%= item.itemName %>' required>
        </div>
        <div class='field'>
            <label>Item Image</label>
            <input type='text' name='item[itemImage]' value='<%= item.itemImage %>' required>
        </div>
        <div class='field'>
            <label>Description of Item</label>
            <textarea name='item[itemDescription]' required><%= item.itemDescription%></textarea>
        </div>
        <input class='ui violet big inverted button' type='submit'>
    </form>
</div>

<% include ./partials/footer %>